<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!-- 2 -->
<!-- 3 -->
<!-- 1 -->

    <TextView
        android:id="@+id/cityitemtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:text="时间" />

    <TextView
        android:id="@+id/cityitemcityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cityitemtime"
        android:layout_below="@+id/cityitemtime"
        android:text="沈阳市"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cityitemtemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cityitemcityname"
        android:layout_alignBottom="@+id/cityitemcityname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:text="温度"
        android:textSize="30dp" />
    
</RelativeLayout>